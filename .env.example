# Application settings
APP_NAME="PraetorAPI"
APP_VERSION="0.1.0"
DEBUG=True

# Server settings
SERVER_HOST="127.0.0.1"
SERVER_PORT=8000

# Database settings
# Example for PostgreSQL: DATABASE_URL="postgresql+asyncpg://user:password@host:port/dbname"
# Example for SQLite: DATABASE_URL="sqlite+aiosqlite:///./test.db"
DATABASE_URL="sqlite+aiosqlite:///./default.db"

# Security settings
SECRET_KEY="your-super-secret-key-that-is-long-and-random"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Celery settings
# Example for Redis (default): CELERY_BROKER_URL="redis://localhost:6379/0"
# Example for RabbitMQ: CELERY_BROKER_URL="amqp://user:password@host:5672/"
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="db+sqlite:///celery_results.db"

# CORS settings
CORS_ORIGINS='["http://localhost:3000", "http://127.0.0.1:3000"]'